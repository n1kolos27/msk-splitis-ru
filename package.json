{
  "name": "msk-splitis-ru-e2e-tests",
  "version": "1.0.0",
  "description": "E2E тесты для сайта msk.splitis.ru с использованием Playwright",
  "scripts": {
    "build": "eleventy",
    "serve": "eleventy --serve",
    "dev": "eleventy --serve --watch",
    "server": "node server.js",
    "server:https": "node server-https.js",
    "cert:generate": "bash generate-localhost-cert.sh",
    "cert:generate:win": "powershell -ExecutionPolicy Bypass -File generate-localhost-cert.ps1",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:report": "playwright show-report",
    "test:ci": "playwright test --project=chromium --reporter=list,html",
    "test:chromium": "playwright test --project=chromium",
    "test:all": "playwright test"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing"
  ],
  "author": "",
  "license": "UNLICENSED",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-img": "^6.0.4",
    "@playwright/test": "^1.40.0",
    "html-minifier": "^4.0.0",
    "cssnano": "^7.0.6",
    "postcss": "^8.4.47",
    "terser": "^5.36.0"
  },
  "dependencies": {
    "resend": "^3.2.0"
  }
}
